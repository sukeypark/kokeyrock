<div id="content_body">
    <div id="upload_image_modal" class="update_avatar_modal">
        <div class="modal-header">
            <h3>
                <div class="steps-group">
                    <div class="step completed">1</div>
                    <div class="step active">2</div>
                    <div class="step ">3</div>
                    <div class="line"></div>
                </div>
            </h3><h3 class="step-title"><%=translation.applications.step_create_avatar.title%></h3>
        </div>
        <form id="create_avatar_form" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="/idm/applications/<%= application.id %>/step/avatar/" method="POST" enctype="multipart/form-data">
            <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
            <input id="submit_avatar" type="hidden" name="" value="">
            <div class="modal-body clearfix">
                <div class="row avatar-update-container">
                    <div class="col-md-10">
                        <img id="avatar-update" src="/img/logos/original/app.png" alt="your image">
                    </div>
                    <div class="col-md-2 update_actions" style="display:none;">
                        <h6><%=translation.applications.step_create_avatar.content01%></h6>
                        <a href="#" class="btn btn-default always-enabled" id="cancel-crop-button">Cancel</a>
                    </div>
                </div>
                <div>
                    <fieldset>
                        <input id="id_x" name="x" type="hidden">
                        <input id="id_y" name="y" type="hidden">
                        <input id="id_w" name="w" type="hidden">
                        <input id="id_h" name="h" type="hidden">
                        <div class="form-group ">
                            <label class="control-label" for="id_image"></label>
                            <div id="image_selected" class="">
                                <input id="id_image" accept="image/*" name="image" type="file">
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary"><%=translation.applications.step_create_avatar.next_btn%></button>
            </div>
        </form>
    </div>
</div>
<script src="/javascripts/applications/handle_assign_avatar.js" type="text/javascript"></script>