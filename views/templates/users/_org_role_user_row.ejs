<!-- Template to create rows with users assign roles in the application -->
<script type="text/x-custom-template" id="table_row_org_role_user_template">
    <li id="user_id" class="list-group-item">
        <div class="avatar filter_field">
            <img alt="user logo" src="user_avatar">
        </div>
        <div class="member" data-update_owners_users-id="">
            <div class="data">
                <span class="name">username</span>
            </div>
            <div class="active remove">
                <a class="fa fa-times" href="#remove"></a>
            </div>
        </div>
        <div class="dropdown role_options">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="">
                <span class="roles_display">role_id</span>
                <span class="fa fa-chevron-down"></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-right role_dropdown clearfix">
                <li class="app-roles-list">
                    <span>organization_name</span>
                    <ol>
                        <li id="owner" class="role_dropdown_role">
                            <i class="fa fa-check"></i>
                            <%=translation.templates.users.org_role_user_row.li01%>
                        </li>
                        <li id="member" class="role_dropdown_role">
                            <i class="fa fa-check"></i>
                            <%=translation.templates.users.org_role_user_row.li02%>
                        </li>
                    </ol>
                </li>
            </ul>
        </div>
    </li>
</script>