                                 <span class="help-block alert alert-danger "><%=translation.saml2.required_field%></span>
                             <% } %>
                         </div>
                    </div>
                    <div class="form-group required eidas">
                        <label class="control-label required"><%=translation.saml2.label17%></label>
                        <div class="eidas_input_company">
                             <div class="">
                                 <div class="select-multiple form-group">
                                    <select id="sp_type" name="eidas_credentials[sp_type]" class="selectpicker" data-size="2" data-width="100%" data-dropup-auto="false">
                                        <option value="public"><%=translation.saml2.public_option%></option>
                                        <option selected value="private"><%=translation.saml2.private_option%></option>
                                    </select>
                                </div>
                             </div>
                             <% if (errors.indexOf("sp_type") != -1) { %>
                                 <span class="help-block alert alert-danger" style="margin-top: 55px"><%=translation.saml2.alert01%></span>
                             <% } %>
                         </div>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary"><%=translation.saml2.step_create_eidas_credentials.next_btn%></button>
            </div>
        </form>
    </div>
</div>

