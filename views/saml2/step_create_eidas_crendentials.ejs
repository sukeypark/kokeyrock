                            <label class="control-label required" for="id_support_contact_person_company"><%=translation.saml2.label06%></label>
                            <div class="">
                                <input class="form-control" id="id_support_contact_person_company" name="eidas_credentials[support_contact_person_company]" type="text" value="<%= eidas_credentials.support_contact_person_company %>">
