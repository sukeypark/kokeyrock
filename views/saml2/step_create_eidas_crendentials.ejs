                            </div>
                            <% if (errors.indexOf("support_contact_person_name") != -1) { %>
                                <span class="help-block alert alert-danger "><%=translation.saml2.required_field%></span>
                            <% } %>
                        </div>
                        <div class="eidas_input">
                            <label class="control-label required" for="id_support_contact_person_surname"><%=translation.saml2.label03%></label>
