                            <div class="">
                                <input class="form-control" id="id_technical_contact_person_company" name="eidas_credentials[technical_contact_person_company]" type="text" value="<%= eidas_credentials.technical_contact_person_company %>">
                            </div>
                            <% if (errors.indexOf("technical_contact_person_company") != -1) { %>
                                <span class="help-block alert alert-danger "><%=translation.saml2.required_field%></span>
                            <% } %>
                        </div>    
                    </div>
                    <div class="form-group required eidas">
                        <label class="control-label required"><%=translation.saml2.label13%></label>
