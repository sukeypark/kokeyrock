<div id="content_body">
    <div id="upper_message" class="alert">
        <p><strong>type:</strong>data</p>
    </div>
    <div class="page-header">
        <h2>
            <%=translation.admin.users.title%>
        </h2>
    </div>
    <div id="users-page">
        <div class="panel panel-default datatable" id="auth_admins" data-pagination-url="/filters/users" data-application_id="idm_admin_app" data-pagination-pages="">
            <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
            <div class="panel-heading">
                <div id="entries">
                    <p><%=translation.admin.users.content01%></p>
                    <div class="select-multiple form-group">
                        <select id="select_entries" class="selectpicker" data-size="5" data-width="100%" data-dropup-auto="false" data-dropdown-align-right="true">
                            <option class="" value="15">15</option>
                            <option class="" value="20">20</option>
                            <option class="" value="30">30</option>
                            <option class="" value="50">50</option>
                        </select>
                    </div>
                    <p><%=translation.admin.users.content02%></p>
                </div>
                <div class="filter table_search client">
                    <input id="filter_user" class="form-control" value="" type="text" name="list_users__filter__q" placeholder="Filter">
                </div>
                <div class="btn-group"> 
                    <button title="Create user" data-toggle="modal" data-target="#create_user_modal" class="btn btn-default btn-sm ajax-modal">
                        <%=translation.admin.users.create_user_btn%>
                    </button>
                </div>
                <div class="btn-group"> 
                    <button id="delete_user" title="Delete user" class="btn btn-default btn-sm ajax-modal">
                        <%=translation.admin.users.delete_user_btn%>
                    </button>
                </div>
            </div>
            <div class="panel-body datatable-content">
                <div style="overflow-x:auto;">
                    <table id="user_table" class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 2%;">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="check_all">
                                    </div> 
                                </th>
                                <th style="width: 5%;"></th>
                                <th style="width: 35%;">Id</th>
                                <th style="width: 20%;"><%=translation.admin.users.username_col_table%></th>
                                <th style="width: 20%;">Email</th>
                                <th style="width: 5%;"><%=translation.admin.users.enable_col_table%></th>
                                <th style="width: 10%;"><%=translation.admin.users.actions_col_table%></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div style="display: none;" class="alert alert-info" id="no_users_found">
                <%=translation.admin.users.alert01%>
            </div>
            <div class="panel-footer">
                <nav id="users_pagination_container"></nav>
            </div>
        </div>
    </div>
</div>

<%- include _delete_user %>
<%- include _reset_password %>
<%- include _edit_user %>
<%- include _create_user %>

<%- include ../templates/./admin/./_user_row %>
<script src="/javascripts/admin/list_users/index.js" type="text/javascript"></script>
<script src="/javascripts/admin/list_users/ui_manager.js" type="text/javascript"></script>
<script src="/javascripts/admin/list_users/event_manager.js" type="text/javascript"></script>