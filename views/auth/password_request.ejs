<div class="row">
    <div class="remember-password">
        <div id="" class="static_page">
            <div class="modal-header">
                <h3>
                    <%=translation.auth.pass_request.title%>
                </h3>
            </div>
            <form id="" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="/password/request" method="POST" enctype="">
                <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
                <div class="modal-body clearfix">
                    <p><%=translation.auth.pass_request.content%></p>
                    <div class="form-group">
                        <label class="control-label" for="id_email"><%=translation.auth.pass_request.label%></label>
                        <div class=" ">
                            <input class="form-control" id="id_email" name="email" type="email">
                        </div>
                        <% if (error === 'empty_field') { %>
                            <span class="help-block alert alert-danger "><%=translation.auth.pass_request.required_field%></span>
                        <% } %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><%=translation.auth.pass_request.send_btn%></button>
                    <div class="actions">
                        <a href="/sign_up">
                            <%=translation.auth.pass_request.link01%>
                        </a>
                        <a href="/confirmation">
                            <%=translation.auth.pass_request.link02%>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
