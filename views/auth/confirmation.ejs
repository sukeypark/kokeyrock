<div class="row">
    <div class="resend-confirmation-instructions">
        <div id="" class="static_page">
            <div class="modal-header">
                <h3>
                    <%=translation.auth.confirmation.title%>
                </h3>
            </div>
            <form id="" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="/confirmation" method="POST" enctype="">
                <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
                <div class="modal-body clearfix">
                    <div class="form-group ">
                        <label class="control-label  " for="id_email"><%=translation.auth.confirmation.label01%></label>
                        <div class=" ">
                            <input class="form-control" id="id_email" name="email" type="email">
                        </div>
                        <% if (error === 'empty_field') { %>
                            <span class="help-block alert alert-danger "><%=translation.auth.confirmation.required_field%></span>
                        <% } %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><%=translation.auth.confirmation.resend_btn%></button>
                    <div class="actions">
                        <a href="/sign_up/">
                            <%=translation.auth.confirmation.link01%>
                        </a>
                        <a href="/password/request/">
                            <%=translation.auth.confirmation.link02%>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
