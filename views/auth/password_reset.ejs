<div class="row">
    <div class="remember-password">
        <div id="" class="static_page">
            <div class="modal-header">
                <h3>
                    <%=translation.auth.pass_reset.title%>
                </h3>
            </div>
            <form id="" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="/password/reset/?reset_key=<%= key %>&amp;email=<%= email %>" method="POST" enctype="">
                <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
                <% if (errors.includes('password_different')) { -%>
                    <span class="help-block alert alert-danger "><%=translation.auth.pass_reset.alert%></span>
                <% } -%>
                <div class="modal-body clearfix">
                    <div class="form-group  has-feedback">
                        <label class="control-label  " for="id_password1"><%=translation.auth.pass_reset.label01%></label>
                        <div class=" ">
                            <input class="form-control" id="id_password1" name="password1" type="password"><span class="form-control-feedback fa fa-eye"></span>
                        </div>
                        <% if (errors.includes('password')) { -%>
                            <span class="help-block alert alert-danger "><%=translation.auth.pass_reset.required_field%></span>
                        <% } -%>
                    </div>
                    <div class="form-group  has-feedback">
                        <label class="control-label  " for="id_password2"><%=translation.auth.pass_reset.label02%></label>
                        <div class=" ">
                            <input class="form-control" id="id_password2" name="password2" type="password"><span class="form-control-feedback fa fa-eye"></span>
                        </div>
                        <% if (errors.includes('confirm_password')) { -%>
                            <span class="help-block alert alert-danger "><%=translation.auth.pass_reset.required_field%></span>
                        <% } -%>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><%=translation.auth.pass_reset.change_btn%></button>
                    <div class="actions">
                        <a href="/sign_up">
                            <%=translation.auth.pass_reset.link01%>
                        </a>
                        <a href="/confirmation">
                            <%=translation.auth.pass_reset.link02%>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/javascripts/users/handle_password_strength.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function(){
        $('#id_password1').bind("keyup input",function(e) {
            var input = $('#id_password1')
            var value_input = $('#id_password1').val()
            var label = input.closest('.form-group').find('label')
            checkStrength(value_input, input, label)
        })
    })
</script>
