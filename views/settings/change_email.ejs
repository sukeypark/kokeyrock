<div id="content_body">
    <div class="page-header">
        <h1><%=translation.settings.change_email.title%></h1>
    </div>
    <div id="change_email_modal" class="static_page">
        <form id="change_email_modal" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="/idm/settings/email" method="POST" enctype="">
            <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
            <div class="modal-body clearfix">
                <div class="left">
                    <fieldset>
                        <div class="form-group required">
                            <label class="control-label  required" for="id_email"><%=translation.settings.change_email.label01%></label>
                            <div class="">
                                <input class="form-control" id="id_email" name="email" type="email" value="<%= session.user.email %>">
                                <% if (errors.includes('email')) { %>
                                    <span class="help-block alert alert-danger "><%=translation.settings.change_email.required_field%></span>
                                <% } %>
                            </div>
                        </div>
                        <div class="form-group required has-feedback">
                            <label class="control-label  required" for="id_password"><%=translation.settings.change_email.label02%></label>
                            <div class="">
                                <input class="form-control" id="id_password" name="password" type="password"><span class="form-control-feedback fa fa-eye"></span>
                                <% if (errors.includes('password')) { %>
                                    <span class="help-block alert alert-danger "><%=translation.settings.change_email.required_field%></span>
                                <% } %>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary"><%=translation.settings.change_email.change_btn%></button>
            </div>
        </form>
    </div>
</div>
